{
    "version": "0.1",
    "name": "Czech Characters",
    "description": "České znaky",

    "icons": {
        "16": "images/icon_16.png",
        "48": "images/icon_48.png",
        "128": "images/icon_128.png"
    },

    "permissions": [
        "clipboardWrite",
        "contextMenus",
        "tabs"
    ],

    "browser_action": {
        "default_icon": "images/icon_16.png",
        "default_title": "České znaky",
        "default_popup": "views/popup.html"
    },

    "background_page": "views/background.html",
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["javascript/contentscript.js"]
    }]

}
